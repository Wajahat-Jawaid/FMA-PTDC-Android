<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data />

    <RelativeLayout style="@style/AppTheme.Dialog.Container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_text"
                style="@style/AppTheme.Dialog.Title" />

            <TextView
                android:id="@+id/msg_text"
                style="@style/AppTheme.Dialog.Message" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/separator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_btn"
                    style="@style/AppTheme.Dialog.Buttons"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@android:string/cancel"
                    android:textAppearance="@style/AppTheme.TextView.Reg.Small"
                    android:textColor="@color/greyAA" />

                <View
                    android:id="@+id/buttons_separator"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/separator" />

                <Button
                    android:id="@+id/ok_btn"
                    style="@style/AppTheme.Dialog.Buttons"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@android:string/ok"
                    android:textAllCaps="true" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>