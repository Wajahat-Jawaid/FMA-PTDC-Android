<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.salampakistan.model.Location" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="@dimen/padding_small"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/padding_micro"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="@dimen/padding_tiny">

                <View
                    android:id="@+id/trip_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/greyCC" />

                <View
                    android:id="@+id/title_text"
                    style="@style/AppTheme.TextView.Bold"
                    android:layout_width="160dp"
                    android:layout_height="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/padding_small"
                    android:background="@color/greyAA" />
            </RelativeLayout>

            <View
                android:id="@+id/description_text"
                style="@style/AppTheme.TextView.Bold"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/padding_small"
                android:background="@color/greyCC" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>