<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="String" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/row_carousel_image_width"
        android:layout_height="@dimen/row_carousel_image_height"
        android:layout_marginEnd="@dimen/padding_medium"
        app:cardBackgroundColor="@color/greyEE"
        app:cardCornerRadius="@dimen/padding_large"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:height="@{@dimen/row_carousel_image_height}"
            app:imageUrlCustomDimensions="@{model}"
            app:width="@{@dimen/row_carousel_image_width}" />
    </androidx.cardview.widget.CardView>
</layout>