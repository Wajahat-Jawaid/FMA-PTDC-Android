<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/row_home_where_to_go_item_width"
        android:layout_height="@dimen/row_home_where_to_go_item_height"
        android:layout_marginEnd="@dimen/padding_medium"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/padding_large"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_home_item_height"
                android:background="@color/skeleton_color" />

            <View
                android:id="@+id/view1"
                android:layout_width="160dp"
                android:layout_height="10dp"
                android:layout_above="@+id/view2"
                android:layout_marginStart="@dimen/padding_medium"
                android:layout_marginBottom="@dimen/padding_tiny"
                android:background="@color/skeleton_darkColor" />

            <View
                android:id="@+id/view2"
                android:layout_width="110dp"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/padding_medium"
                android:layout_marginBottom="@dimen/padding_medium"
                android:background="@color/skeleton_darkColor" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>